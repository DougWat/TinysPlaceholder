            </div>
            <div class="mobile-address">
                {% include 'contact' %}
            </div>
            <div class="seperator">
            </div>
            <div class="menu-block">
                <div class="menu">
                    {% include 'menu-item', name:"Coffee Menu", prices:"8oz,12oz,16oz", noDots:true %}
