                    {% include 'menu-item', name:"Coffee For Here", prices:"-,$3.00,-" %}
                    {% include 'menu-item', name:"Coffee", prices:"$3.00,$3.50,$4.00" %}
                    {% include 'menu-item', name:"Coffee", prices:"$3.00,$3.50,$4.00" %}
                    {% include 'menu-item', name:"Coffee", prices:"$3.00,$3.50,$4.00" %}
                </div>
                <div class="menu-additional">
                    <h5>+ Seasonal Drinks & Amazing Food!</h5>
                </div>
            </div>
        </div>
        <div class="container address">
            {% include 'contact' %}
        </div>
    </div>
</section>